<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yennefer.financemanager" >

    <application
        android:allowBackup="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        android:label="@string/app_name"
        android:name="com.orm.SugarApp">

        <meta-data android:name="DATABASE" android:value="finance_manager.db" />
        <meta-data android:name="VERSION" android:value="1" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.example.yennefer.financemanager" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OperationActivity"
            android:label="@string/action_add_operations" >
        </activity>
        <activity
            android:name=".StatisticActivity"
            android:label="@string/action_statistic" >
        </activity>
    </application>

</manifest>
